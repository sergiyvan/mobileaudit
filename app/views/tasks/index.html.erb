<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Price</th>
      <th>Expirience</th>
      <th>Status</th>
      <th>Task type</th>
      <th>Exp require</th>
      <th>Expiration date</th>
      <th>Minutes to finish</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.address %></td>
        <td><%= task.price %></td>
        <td><%= task.expirience %></td>
        <td><%= task.status %></td>
        <td><%= task.task_type %></td>
        <td><%= task.exp_require %></td>
        <td><%= task.expdate.strftime("%d-%m-%Y") %></td>
        <td><%= task.time_to_finish %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

